@model FornecedorModel
@using Thot.Enum
@{
    ViewData["Title"] = "Edição de Fornecedor";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.css" crossorigin="anonymous">

<div class="text-center">
    <h1 class="display-4">Edição de Fornecedor</h1>
    <p>Projeto Thot</p>
</div>

<div class="container">
    <form class="mt-3 mb-3 ml-3 mr-3" asp-controller="Fornecedor" asp-action="Alterar" method="POST">
        <!-- Inicio Formulário -->
        <div class="form-group ">

            <!-- Nome e Razão Social -->
            <div class="row justify-content-center mt-2">
                <div class="col-sm-5">
                    <label for="Nome">Nome do Fornecedor</label>
                    <input type="text" asp-for="Nome" class="form-control">
                    @Html.ValidationMessageFor(x => x.Nome)
                </div>

                <div class="col-sm-6">
                    <label for="RazaoSocial">Razao Social (Se houver)</label>
                    <input type="text" asp-for="RazaoSocial" class="form-control">
                </div>
            </div>

            <!-- Tipo de Fornecedor e Cpf/Cnpj e  -->
            <div class="row justify-content-center mt-2">
                <div class="col-sm-4">
                    <label for="TipoFornecedor">Tipo de Fornecedor</label>
                    <select class="form-control" asp-for="TipoFornecedor">
                        <option value="0"> -- ESCOLHA -- </option>
                        <option value="@TipoPessoa.Fisica">Pessoa Física</option>
                        <option value="@TipoPessoa.Juridica">Pessoa Jurídica</option>
                    </select>
                </div>

                <div class="col-sm-6">
                    <label for="Cpf_Cnpj">CPF/CNPJ</label>
                    <input type="text" asp-for="Cpf_Cnpj" class="form-control" maxlength="18">
                    @Html.ValidationMessageFor(x => x.Cpf_Cnpj)
                </div>
            </div>

            <!-- Contato  -->
            <div class="row justify-content-center mt-2">
                <div class="col-sm-6">
                    <label for="Email">E-mail</label>
                    <input type="text" asp-for="Email" class="form-control">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>

                <div class="col-sm-5">
                    <label for="Contato">Telefone ou Celular</label>
                    <input type="text" asp-for="Contato" class="form-control" maxlength="15">
                    @Html.ValidationMessageFor(x => x.Contato)
                </div>
            </div>

            <hr />

            <!-- Endereço -->
            <div class="row justify-content-center mt-2">
                <div class="col-sm-8">
                    <label for="Logradouro">Logradouro</label>
                    <input type="text" class="form-control" asp-for="Logradouro">
                </div>

                <div class="col-sm-2">
                    <label for="Numero">Número</label>
                    <input type="text" class="form-control" asp-for="Numero">
                </div>

                <div class="col-sm-2">
                    <label for="Complemento">Complemento</label>
                    <input type="text" class="form-control" asp-for="Complemento" />
                </div>
            </div>

            <div class="row justify-content-center mt-2">
                <div class="col-sm-3">
                    <label for="Bairro">Bairro</label>
                    <input type="text" class="form-control" asp-for="Bairro" />
                </div>

                <div class="form-group col-sm-5">
                    <label for="Cidade">Cidade:</label>
                    <input type="text" class="form-control" asp-for="Cidade">
                </div>

                <div class="col-sm-2">
                    <label for="Estado">Estado</label>
                    <div class="input-group">
                        <select class="form-control" asp-for="Estado">
                            <option value=""> -- ESCOLHA -- </option>
                            <option value="AC">Acre</option>
                            <option value="AL">Alagoas</option>
                            <option value="AP">Amapá</option>
                            <option value="AM">Amazonas</option>
                            <option value="BA">Bahia</option>
                            <option value="CE">Ceará</option>
                            <option value="DF">Distrito Federal</option>
                            <option value="ES">Espírito Santo</option>
                            <option value="GO">Goiás</option>
                            <option value="MA">Maranhão</option>
                            <option value="MT">Mato Grosso</option>
                            <option value="MS">Mato Grosso do Sul</option>
                            <option value="MG">Minas Gerais</option>
                            <option value="PA">Pará</option>
                            <option value="PB">Paraíba</option>
                            <option value="PR">Paraná</option>
                            <option value="PE">Pernambuco</option>
                            <option value="PI">Piauí</option>
                            <option value="RJ">Rio de Janeiro</option>
                            <option value="RN">Rio Grande do Norte</option>
                            <option value="RS">Rio Grande do Sul</option>
                            <option value="RO">Rondônia</option>
                            <option value="RR">Roraima</option>
                            <option value="SC">Santa Catarina</option>
                            <option value="SP">São Paulo</option>
                            <option value="SE">Sergipe</option>
                            <option value="TO">Tocantins</option>
                        </select>
                    </div>
                </div>

                <div class="form-group col-sm-2">
                    <label for="Cep">CEP:</label>
                    <input type="text" class="form-control" asp-for="Cep" maxlength="9">
                </div>
            </div>

            <hr>

            <!-- Botões -->
            <div class="form-row mt-3 d-flex justify-content-between">
                <div>
                    <a class="btn btn-warning" asp-controller="Fornecedor" asp-action="ListaFornecedores">Voltar</a>
                </div>
                <div>
                    <button type="submit" class="btn btn-success">Adicionar</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

<script>
        $(document).ready(function() {

        $('#Contato').mask('(00) 00000-0000');
        $('#Cep').mask('00000-000');

        aplicarMascara();

        $('#TipoFornecedor').change(function() {
            aplicarMascara();
        });

        function aplicarMascara() {
            var tipoFornecedor = $('#TipoFornecedor option:selected').text();
            if (tipoFornecedor === 'Pessoa Física') {
                $('#Cpf_Cnpj').mask('000.000.000-00');
            } else if (tipoFornecedor === 'Pessoa Jurídica') {
                $('#Cpf_Cnpj').mask('00.000.000/0000-00');
            } else {
                $('#Cpf_Cnpj').mask('000.000.000-00');
            }
        }
    });
</script>